<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="241sp"
        android:layout_height="59sp"
        android:layout_marginStart="85sp"
        android:layout_marginLeft="85sp"
        android:layout_marginTop="113sp"
        android:layout_marginEnd="85sp"
        android:layout_marginRight="85sp"
        android:layout_marginBottom="41sp"
        android:alpha="0.9"
        android:clickable="true"
        android:fontFamily="@font/galada"
        android:text="Curreny Converter"
        android:textAllCaps="false"
        android:textColor="#FECB5A"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="249sp"
        android:layout_height="51sp"
        android:layout_marginStart="81sp"
        android:layout_marginLeft="81sp"
        android:layout_marginEnd="81sp"
        android:layout_marginRight="81sp"
        android:layout_marginBottom="340sp"
        android:drawableEnd="@drawable/ic_baseline_autorenew_24"
        android:drawableRight="@drawable/ic_baseline_autorenew_24"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="amount in $"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:textColorHint="#953E3838"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="153sp"
        android:layout_marginLeft="153sp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="154sp"
        android:layout_marginRight="154sp"
        android:layout_marginBottom="262sp"
        android:cursorVisible="false"
        android:onClick="bFunction"
        android:text="Convert"
        android:textAllCaps="false"
        app:backgroundTint="#FECA58"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountEditText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="383sp"
        android:layout_height="233sp"
        android:layout_marginStart="14sp"
        android:layout_marginLeft="14sp"
        android:layout_marginTop="213sp"
        android:layout_marginEnd="14sp"
        android:layout_marginRight="14sp"
        android:layout_marginBottom="54sp"
        app:layout_constraintBottom_toTopOf="@+id/amountEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imgapp" />


</androidx.constraintlayout.widget.ConstraintLayout>